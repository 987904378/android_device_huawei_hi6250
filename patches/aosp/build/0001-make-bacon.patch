diff --git a/core/Makefile b/core/Makefile
index 07d1c94..872a0a1 100644
--- a/core/Makefile
+++ b/core/Makefile
@@ -1565,8 +1565,14 @@ $(INTERNAL_OTA_PACKAGE_TARGET): $(BUILT_TARGET_FILES_PACKAGE) $(DISTTOOLS)
 	   $(if $(OEM_OTA_CONFIG), -o $(OEM_OTA_CONFIG)) \
 	   $(BUILT_TARGET_FILES_PACKAGE) $@
 
-.PHONY: otapackage
+AOSP_VERSION := $(TARGET_PRODUCT)--$(shell date -u +%Y%m%d)-$(USER)
+AOSP_TARGET_PACKAGE := $(PRODUCT_OUT)/aosp-$(AOSP_VERSION).zip
+
+.PHONY: otapackage bacon
 otapackage: $(INTERNAL_OTA_PACKAGE_TARGET)
+bacon: otapackage
+	$(hide) ln -f $(INTERNAL_OTA_PACKAGE_TARGET) $(AOSP_TARGET_PACKAGE)
+	@echo -e ${CL_CYN}"Package Complete: $(AOSP_TARGET_PACKAGE)"${CL_RST}
 
 endif    # recovery_fstab is defined
